<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customBlack"
    android:padding="0dp"
    android:alpha="0.85"
    tools:context=".Ui.AddReviewFragment">

    <LinearLayout
        android:id="@+id/content_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_review_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/form_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/midGray"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/add_review_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add a review"
                        android:textColor="@color/customBlack"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/add_review_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Tell others what you thought"
                        android:textColor="@color/customBlack"
                        android:textSize="14sp"
                        android:alpha="0.8" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"                        android:layout_marginTop="6dp"
                        android:hint="Select Console"
                        app:boxStrokeColor="@color/customBlack"
                        app:boxBackgroundColor="@color/midGray"

                        >
                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/console_spinner"
                            android:inputType="none"
                            android:dropDownVerticalOffset="0dp"
                            android:popupBackground="@color/midGray"
                            />
                    </com.google.android.material.textfield.TextInputLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/title_text_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Game title"
                        app:boxBackgroundColor="@color/midGray"
                        app:boxStrokeColor="@color/customBlack"
                        app:counterEnabled="true"
                        app:counterMaxLength="35"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/entered_game_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/customBlack"
                            android:maxLines="1"
                            android:maxLength="35"
                            tools:text="some text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/review_text_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:boxBackgroundColor="@color/midGray"
                        app:counterEnabled="true"
                        app:counterMaxLength="250"
                        app:boxStrokeColor="@color/customBlack">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/entered_review"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="250"
                            android:minLines="1"
                            android:maxLines="5"
                            android:gravity="top|start"
                            android:scrollHorizontally="false"
                            android:textColor="@color/customBlack"
                            android:hint="Enter your review here"
                            android:textColorHint="@color/customBlack"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/choose_rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Your score"
                        android:textColor="@color/customBlack"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:progressBackgroundTint="@color/darkGray"
                        android:progressTint="@color/highRating"
                        android:secondaryProgressTint="@color/highRating"
                        android:rating="5"
                        android:isIndicator="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/add_review_button"
        layout="@layout/custom_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>